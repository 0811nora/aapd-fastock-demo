<div
  class="collapse navbar-collapse d-none d-lg-flex justify-content-lg-center position-relative px-3 px-md-3 px-lg-0 pt-0 pb-6px"
  id="navbarSupportedContent"
>
  <ul
    class="sub-nav list-unstyled mb-0 d-flex justify-content-center align-items-center"
  >
    <% menuItems.forEach((menuItem, index) => { %>
    <li class="nav-item nav-item-dropdown" style="position: initial">
      <% let linkHref = '#'; %>       <% if (menuItem.id === 'photo') { %>      
        <% linkHref = 'product-list.html'; %>       <% } %>
      <a
        href="<%= linkHref %>"
        class="nav-link dropdown sub-nav-btn mb-6p"
        role="button"
        id="dropdownCateMenu<%= index %>"
        aria-expanded="false"
        ><%= menuItem.name %></a
      >

      <% if (menuItem.categories && menuItem.categories.length > 0) { %>
      <section
        class="dropdown-menu p-0"
        style="width: 100%"
        aria-labelledby="dropdownCateMenu<%= index %>"
      >
        <div class="d-flex">
          <div class="list-left bg-neutral-100">
            <ul
              class="nav nav-pills d-flex justify-content-center bg-white gap-2 p-2 mb-3 rounded-6"
              id="pills-tab-<%= menuItem.id %>"
              role="tablist"
            >
              <% tabsData.forEach((tab, tabIndex) => { %>
              <li class="nav-item" role="presentation">
                <button
                  class="list-left-pills-btn <%= tabIndex === 0 ? 'active' : '' %>"
                  id="sub-pills-<%= tab.id %>-tab-<%= menuItem.id %>"
                  data-bs-toggle="pill"
                  data-bs-target="#sub-pills-<%= tab.id %>-<%= menuItem.id %>"
                  type="button"
                  role="tab"
                  aria-controls="sub-pills-<%= tab.id %>-<%= menuItem.id %>"
                  aria-selected="<%= tabIndex === 0 ? 'true' : 'false' %>"
                >
                  <%= tab.name %>
                </button>
              </li>
              <% }); %>
            </ul>

            <div class="tab-content" id="pills-tabContent-<%= menuItem.id %>">
              <% tabsData.forEach((tab, tabIndex) => { %>
              <div
                class="tab-pane fade <%= tabIndex === 0 ? 'show active' : '' %>"
                id="sub-pills-<%= tab.id %>-<%= menuItem.id %>"
                role="tabpanel"
                aria-labelledby="sub-pills-<%= tab.id %>-tab-<%= menuItem.id %>"
              >
                <div class="d-flex gap-2 flex-wrap">
                  <% tab.images.forEach(image => { %>
                  <img
                    class="pills-img"
                    src="/assets/images/Homepage/<%= image %>"
                    alt="<%= image %>"
                  />
                  <% }); %>
                </div>
              </div>
              <% }); %>
            </div>
          </div>

          <div class="list-right bg-white">
            <ul class="list-unstyled d-flex align-items-center">
              <% menuItem.categories.forEach((category, categoryIndex) => { %>
              <li class="pb-0 mb-0">
                <ul class="list-unstyled list-group d-flex flex-column gap-3">
                  <li>
                    <h3 class="fs-5 fw-bold py-1 px-2">
                      <%= category.title %>
                    </h3>
                  </li>
                  <% category.items.forEach(item => { %>
                  <li>
                    <a class="list-group-item" href="#"><%= item %></a>
                  </li>
                  <% }); %>
                </ul>
              </li>
              <% if (categoryIndex < menuItem.categories.length - 1) { %>
              <li class="divider-box"></li>
              <% } %> <% }); %>
            </ul>
          </div>
        </div>
      </section>
      <% } %>
    </li>
    <% }); %>
